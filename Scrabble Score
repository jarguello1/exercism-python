
def score(word):
    word = word.upper()
    scoring_table = {'A':1,'B':3,'C':3,'D':2, 'E':1, 'F':4, 'G':2, 'I':1, 'O':1, 'U':1, 'L':1, 'N':1, 'R':1, 'S':1, 'T':1, 'M':3, 'P':3, 'H':4, 'V':4, 'W':4, 'Y':4, 'K':5, 'J':8, 'X':8, 'Q':10, 'Z':10}
    score=0
    for letter in word:
        score+=scoring_table[letter]
    return score
 

        
