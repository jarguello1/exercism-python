def latest(scores):
    #return the last item in the list aka the latest scores
    return scores[-1]


def personal_best(scores):
    #return the highest value in the list
    return max(scores)


def personal_top_three(scores):
    """
    return the highest three values in the list
    use sorted and reverse the order of the values for slicing
    """
    sorted_scores = sorted(scores, reverse = True)
    return sorted_scores[:3]
